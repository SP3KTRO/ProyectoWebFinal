@model ProyectoWebFinal.Models.estadisticas_evento

@{
    ViewBag.Title = "Edit";
}

<link rel="stylesheet" href="/Content/estilos.css" />
<h2>Editar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>estadisticas_evento</h4>
        <hr />

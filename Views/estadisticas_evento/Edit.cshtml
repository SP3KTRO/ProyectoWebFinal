                @Html.ValidationMessageFor(model => model.puntuacion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.id_evento, "id_evento", htmlAttributes: new { @class = "control-label col-md-2" })

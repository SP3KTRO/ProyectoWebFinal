@model IEnumerable<ProyectoWebFinal.Models.inventario>

@{
    ViewBag.Title = "Index";
}

<link rel="stylesheet" href="/Content/estilos.css" />
<h2>Inventarios</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.entradas_disponibles)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.precio_entrada)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.evento.nombre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.entradas_disponibles)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.precio_entrada)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.evento.nombre)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.id_inventario }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.id_inventario }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.id_inventario })
        </td>
    </tr>
}

</table>

@model IEnumerable<ProyectoWebFinal.Models.evento>

@{
    ViewBag.Title = "Index";
}

<link rel="stylesheet" href="/Content/estilos.css" />
<h2>Eventos</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.trabajador.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.lugar.lugar1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tipo.tipo1)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fecha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.trabajador.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.lugar.lugar1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tipo.tipo1)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.id_evento }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.id_evento }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.id_evento })
        </td>
    </tr>
}

</table>
